             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BookMe.UserControls.AdminViews"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid>
        <ListView x:Name="MyList"
          HorizontalAlignment="Left"
                  Height="211"
                  Margin="42,19,0,0"
                  VerticalAlignment="Top"
                  Width="215"
              SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn />
                </GridView>
            </ListView.View>
        </ListView>
    <Button x:Name="UpdateBtn"
            Content="Update"
            HorizontalAlignment="Left"
            Margin="154,250,0,0"
            VerticalAlignment="Top"
            Width="75" />
  </Grid>
</UserControl>
